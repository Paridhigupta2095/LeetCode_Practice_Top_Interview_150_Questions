import heapq
from typing import List

class Solution:
    def findKthLargest(self, nums: List[int], k: int) -> int:
        maxheap = [-x for x in nums]   # convert to negative for max-heap
        heapq.heapify(maxheap)         # heapify list
        for i in range(k):
            k_max = heapq.heappop(maxheap)
        return -1 * k_max


# ðŸš€ Driver code
if __name__ == "__main__":
    nums = [3, 2, 1, 5, 6, 4]
    k = 2
    sol = Solution()
    result = sol.findKthLargest(nums, k)
    print(f"The {k}th largest element is:", result)
